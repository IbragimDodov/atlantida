.header
    position relative

.header__inner,
.header__nav-list,
.general-icons__list
    display flex
    justify-content space-between
    align-items center


//----------------- DESKTOP NAVIGATION----------------

.header__nav
    display none
    &-item
        padding-right 20px
        &:last-child
            padding-right 0
    &-link
        font-size 12px
        font-family $font-family-MS
        color rgb(170, 170, 170)
        text-transform uppercase
        line-height 4.1
        &:hover
            font-weight 700
            color #616161

    @media(min-width $grid-lg)
        display block


//-----------------  MOBILE NAVIGATION BUTTON----------------

.menu-icon
    display block
    width 30px
    height 30px

    display flex
    justify-content center
    align-items center

    position relative
    z-index 11

    &.menu-icon-active .menu-icon__line
        background-color transparent
        &:before
            transform rotate(45deg)
            top 0

            transition top 0.2s linear, transform 0.2s ease-in 0.2s
        &:after
            transform rotate(-45deg)
            top 0

            transition top 0.2s linear, transform 0.2s ease-in 0.2s
    &__line
        position relative
        width 30px
        height 5px
        background-color rgb(170, 170, 170)
        &:before
            content ""
            display block
            width 30px
            height 5px
            background-color rgb(170, 170, 170)

            position absolute
            left 0
            top -10px

            transition transform 0.2s ease-in, top 0.2s linear 0.2s
        &:after
            content ""
            display block
            width 30px
            height 5px
            background-color rgb(170, 170, 170)

            position absolute
            left 0
            top 10px

            transition transform 0.2s ease-in, top 0.2s linear 0.2s

    @media(min-width $grid-lg)
        display none


//----------------- MOBILE NAVIGATION----------------

.mobile-nav
    display block
    width 100%
    padding 15px

    position absolute
    right 100%
    top 50px
    z-index 15

    background-color #ffffff

    transition transform 0.4s linear
    &-list
        display flex
        justify-content center
        align-items center
        flex-direction column
    &-item
        display block
        width 100%
        text-align center
        border 2px solid #000
        padding 7px
        border-radius 25px
        border-bottom none
        &:last-child
            border-bottom 2px solid #000
    &-link
        font-size 16px
        font-family $font-family-MS
        color #000000
        text-transform uppercase
        line-height 3.1
        &:hover
            font-weight 700
            color #616161

    @media(min-width $grid-lg)
        display none

.mobile-nav--active
    transform translateX(100%)