
.logo
    z-index 11
    &__wrapper
        display flex
        justify-content space-between
        align-items center
    &__icon-svg
        width 40px
        height 30px
    &__name
        &-link
            font-family $font-family-MS
            font-size 18px
            color rgb(170, 170, 170)
            line-height 2.7
            text-transform uppercase
            padding-left 10px


.general-icons
    display none
    &__item
        border-right 1px solid #aaaaaa
        &:last-child
            border-right none
    &__link
        padding-right 5px
        padding-left 5px
    &__icon
        width 16px
        height 10px
        fill #aaaaaa
        &:hover
            fill #616161

    @media(min-width $grid-lg)
        display block


.flex-start
    justify-content flex-start

//----------------- FORM BLOCK ----------------

.general-form
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap

    &__input
        width 48%

    &__textarea
        width 100%
        height 90px

    &__button
        background-color #464646
        padding 15px 45px
        outline none
        border none
        font-size 14px
        color rgb(227, 227, 227)
        line-height 1.1
        cursor pointer
        &:hover
            background-color transparent
            border 2px solid #464646

.general-form__input,
.general-form__textarea
    display block
    font-size 14px
    font-family $font-family-CT
    color rgb(148, 148, 148)
    font-style italic
    line-height 1.4
    padding 13px
    margin-bottom 20px
    background-color transparent
    outline none
    border 2px solid #464646


//----------------- FORM BLOCK END ----------------

.general-main-title
    font-size 20px
    text-align center
    display inline-block
    font-family $font-family-A
    text-transform uppercase
    position relative
    padding 30px 20px
    margin-bottom 40px
    color rgb(255, 255, 255)

    @media (min-width: $grid-sm)
        font-size 24px

    @media (min-width: $grid-md)
        font-size 35px

    &:after
        content ""
        position absolute
        bottom 0
        left 0
        right 0
        background-repeat repeat
        height 5px
        background-image url("../../static/images/general/wave-line.png")


.general-title-white
    display inline-block
    position relative
    font-size 20px
    font-family $font-family-A
    color #ffffff
    line-height 1.5
    padding 0 20px 25px
    &:after
        content ""
        position absolute
        bottom 0
        left 0
        right 0
        background-repeat repeat
        height 5px
        background-image url("../images/general/wave-line-white.png")

.general-title-black
    display inline-block
    position relative
    font-size 20px
    font-family $font-family-A
    color rgb(62, 61, 61)
    line-height 1.5
    padding 0 20px 25px
    &:after
        content ""
        position absolute
        bottom 0
        left 0
        right 0
        background-repeat repeat
        height 5px
        background-image url("../../static/images/general/wave-line-black.png")

.general-text
    font-size 14px
    font-family $font-family-CT
    color rgb(62, 61, 61)
    line-height 1.7
    text-align left
    margin-top 40px

.white
    color #ffffff

.general-btn-link
    display inline-block
    background-color transparent
    padding 15px 45px
    outline none
    border none
    border 2px solid #3e3d3d
    font-size 14px
    color #3e3d3d
    line-height 1.1
    cursor pointer
    &:hover
        background-color #3e3d3d
        color #ffffff
