.general-icons
    display none
    &__item
        border-right 1px solid #aaaaaa
        &:last-child
            border-right none
    &__link
        padding-right 5px
        padding-left 5px
    &__icon
        width 16px
        height 10px
        fill #aaaaaa
        &:hover
            fill #616161

    @media(min-width $grid-lg)
        display block
