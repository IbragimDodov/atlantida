
.logo
    z-index 11
    &__wrapper
        display flex
        justify-content space-between
        align-items center
    &__icon-svg
        width 40px
        height 30px
    &__name
        &-link
            font-family $font-family-MS
            font-size 18px
            color rgb(170, 170, 170)
            line-height 2.7
            text-transform uppercase
            padding-left 10px


