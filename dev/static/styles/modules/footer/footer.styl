footer
    flex 0 0 auto

    background-image url("../images/content/footer-bg.jpg")
    background-repeat no-repeat
    background-size cover

.footer__logo
    padding-top 20px
    margin-bottom 20px

    @media (min-width: $grid-sm)
        padding-top 50px
        margin-bottom 40px

.footer__main-blocks
    display flex
    flex-direction column
    flex-wrap wrap

    @media (min-width: $grid-sm)
        justify-content space-between
        flex-direction row

.footer__left-side
    width 100%

    @media (min-width: $grid-sm)
        width 35%

.footer__right-side
    width 100%

    @media (min-width: $grid-sm)
        width 62%

.footer__left-side h2
    margin-top 40px
    margin-bottom 30px

.footer__left-side-text
    font-size 14px
    font-family $font-family-CT
    color rgb(148, 148, 148)

.footer__left-side-title
    font-size 14px
    font-family $font-family-MS
    color rgb(227, 227, 227)
    text-transform uppercase
    line-height 1.3

.footer__icons
    margin-bottom 60px

.footer__copy
    padding-top 40px
    padding-bottom 40px
    border-top 1px solid #3e3e3e

.footer__copy-info
    font-size 14px
    font-family $font-family-CT
    color rgb(148, 148, 148)
    font-style italic
    line-height 1.4
