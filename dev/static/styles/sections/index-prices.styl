.prices
    padding-bottom 90px
    background-color #e3e3e3
    &__inner
        text-align center
    &__text
        text-align center
        padding 0 30px
        margin-top 40px
        margin-bottom 50px

        @media(min-width $grid-sm)
            margin-top 40px
            margin-bottom 45px

        @media(min-width $grid-xl)
            padding 0 250px

    &__title
        margin-top 65px
        text-transform uppercase

    &__items
        display flex
        justify-content space-between
        align-items center
        flex-wrap wrap
        @media(min-width $grid-sm)
            flex-wrap nowrap


.prices__item
    display flex
    align-items center
    justify-content center
    flex-direction column
    width 100%
    padding 44px 65px
    background-color #fff
    @media(min-width $grid-sm)
        width 31%
    &-title
        font-size 13px
        color rgb(62, 61, 61)
        line-height 1.3
    &-icon
        position relative
        display flex
        align-items center
        justify-content center
        padding 10px
        border-radius 50%
        border 1px solid #000000
        margin-top 25px
        margin-bottom 25px
        width 50px
        height 50px
        &:before
            content ""
            display block
            position absolute
            height 1px
            width 220%
            top 50%
            transform translateY(-50%)
            right 48px
            background-color #000000
            @media(min-width $grid-sm)
                width 90%
            @media(min-width $grid-md)
                width 150%
            @media(min-width $grid-lg)
                width 220%
        &:after
            content ""
            display block
            position absolute
            height 1px
            width 220%
            top 50%
            transform translateY(-50%)
            left 48px
            background-color #000000
            @media(min-width $grid-sm)
                width 90%
            @media(min-width $grid-md)
                width 150%
            @media(min-width $grid-lg)
                width 220%

    &-cost
        display inline-block
        position relative
        padding-left 25px
        padding-top 15px
        font-size 70px
        color rgb(62, 61, 61)
        font-weight 700
        line-height 0.5
        &:before
            content "$"
            position absolute
            display block
            left 0
            top 0
            font-size 28px

    &-text
        margin-top 50px
        margin-bottom 50px
        font-size 16px
        color rgb(62, 61, 61)
        line-height 1.8



