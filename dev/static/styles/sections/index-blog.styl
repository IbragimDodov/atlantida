.blog
    padding-bottom 90px
    background-color #e3e3e3
    &__inner
        text-align center
    &__text
        text-align center
        padding 0 30px
        margin-top 40px
        margin-bottom 50px

        @media(min-width $grid-sm)
            margin-top 40px
            margin-bottom 45px

        @media(min-width $grid-xl)
            padding 0 250px

    &__title
        margin-top 65px
        text-transform uppercase


.images-row
    display flex
    align-items center
    flex-wrap wrap
    justify-content center

    @media(min-width 1040px)
        flex-wrap nowrap

    &__block
        display flex

        &-image
            width 100%
            display flex
            background-color #000000

        &-img
            width 100%
            height auto

        &-wrap
            position relative
            width 100%
            height auto

.img-descr
    position absolute
    color #e3e3e3
    top 0
    padding 10px

    @media(min-width $grid-md)
        padding 20px 15px

    @media(min-width $grid-xxl)
        padding 50px 35px

.img-data
    display inline-block
    font-size 12px
    font-family $font-family-CT
    color rgb(227, 227, 227)
    font-style italic
    line-height 1.5
    padding-bottom 10px
    padding-right 40px
    margin-bottom 10px
    border-bottom 1px solid #454545

    @media(min-width 1370px)
        margin-bottom 20px
        font-size 13px

.img-title
    position relative
    font-size 12px
    font-family $font-family-MS
    color rgb(227, 227, 227)
    text-transform uppercase
    line-height 1.3
    margin-bottom 10px
    padding-left 12px
    &:before
        content "â–º"
        position absolute
        display block
        font-size 7px
        left 0
        top 50%
        transform translateY(-50%)

    @media(min-width $grid-md)
        font-size 16px
        margin-bottom 25px
    @media(min-width 1040px)
        font-size 12px
        margin-bottom 15px
    @media(min-width $grid-xl)
        font-size 14px
    @media(min-width 1370px)
        margin-bottom 40px


.img-text
    display none
    font-size 12px
    color rgb(148, 148, 148)
    line-height 1.4

    @media(min-width $grid-sm)
        display block

    @media(min-width $grid-md)
        font-size 16px
    @media(min-width 1040px)
        font-size 10px
    @media(min-width $grid-xl)
        font-size 12px
    @media(min-width 1370px)
        font-size 14px

