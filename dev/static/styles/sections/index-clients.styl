.clients
    padding-bottom 90px
    &__inner
        text-align center
    &__text
        text-align center
        padding 0 30px
        margin-top 40px
        margin-bottom 50px

        @media(min-width $grid-sm)
            margin-top 40px
            margin-bottom 45px

        @media(min-width $grid-xl)
            padding 0 250px
            margin-bottom 70px

    &__title
        margin-top 65px
        text-transform uppercase

    &__images
        display flex
        align-items center
        flex-wrap wrap
        justify-content center

        @media(min-width $grid-se)
            justify-content space-between

    &__img
        margin-top 5px