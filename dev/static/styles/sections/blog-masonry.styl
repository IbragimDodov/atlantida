.blog-masonry
    background-color #e3e3e3
    padding-top 40px
    padding-bottom 40px
    @media(min-width $grid-md)
        padding-top 90px
        padding-bottom 90px

.masonry-items
    columns 1
    margin 0
    column-gap 30px
    @media(min-width $grid-sm)
        columns 2
        margin 20px auto
    @media(min-width $grid-md)
        columns 3
.masonry-item
    width 100%
    margin 0 0 60px
    overflow hidden
    break-inside avoid

    &-title
        font-size 18px
        font-family $font-family-MS
        color rgb(62, 61, 61)
        text-transform uppercase
        line-height 1.1
        margin-top 35px
        margin-bottom 15px
    &-suptitle
        font-size 14px
        font-family $font-family-CT
        color rgb(62, 61, 61)
        font-style italic
        line-height 1.2

    &__statistics
        display flex
        align-items center
        padding-left 5px
        padding-top 14px
        padding-bottom 10px
        margin-top 20px
        margin-bottom 30px
        border-top 1px solid #b7b7b7
        border-bottom 1px solid #b7b7b7
        &-img
            margin-right 10px
        &-count
            margin-right 10px
            font-size 14px
            font-family $font-family-CT
            color rgb(129, 129, 129)
            font-style italic
            line-height 1.2
            &:last-child
                margin-right 0
    &__text
        font-size 14px
        color rgb(62, 61, 61)
        line-height 1.7
        margin-bottom 35px




