.team
    background-image url("../../static/images/content/team-bg.jpg")
    background-repeat no-repeat
    background-size cover
    background-position center
    text-align center
    padding-top 60px
    padding-bottom 70px

    &__text
        padding 0 30px
        text-align center
        margin-top 20px
        margin-bottom 35px

        @media(min-width $grid-sm)
            margin-top 40px
            margin-bottom 45px

        @media(min-width $grid-lg)
            padding 0 160px

        @media(min-width $grid-xl)
            padding 0 250px

    &-info
        display flex
        justify-content center
        align-items center

.team-info__item
    display inline-block
    position relative
    margin-top 0
    margin-right 30px
    width 23%
    &:last-child
        margin-right 0
    &:hover
        .team-info__item-descr
            display block

    @media(min-width $grid-md)
        margin-top 60px

    &-descr
        display none
        position absolute
        text-align left
        top 8px
        left 8px
        right 8px
        bottom 8px
        background-color #fff
        opacity .82

        &-inner
            display flex
            flex-direction column
            justify-content flex-end
            width 70%
            padding 20px
            height 100%


    &-name
        font-size 14px
        font-family $font-family-MS
        color rgb(62, 61, 61)
        line-height 1.3

    &-proff
        font-size 15px
        font-family $font-family-CT
        color rgb(62, 61, 61)
        line-height 1.2
        font-style italic
        margin-top 3px
        padding-bottom 10px
        margin-bottom 17px
        border-bottom 2px solid #000

    &-img
        width 100%
        height auto


